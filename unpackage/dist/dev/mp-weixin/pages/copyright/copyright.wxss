
@font-face {
	font-family: "iconfont";
	src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}
.container {
	min-height: 100vh;
	width: 100%;
	height: 100%;
	position: relative;
	background-color: #000000;
}
.bg-image {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100vh;
	z-index: 0;
	object-fit: cover;
}
.header {
	position: relative;
	z-index: 1;
	background: transparent;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.nav-bar {
	height: 88rpx;
	width: 100%;
	display: flex;
	align-items: center;
	position: relative;
	justify-content: center;
}
.nav-logo {
	width: 80rpx;
	height: 80rpx;
	filter: drop-shadow(0 0 5rpx rgba(49, 73, 50, 0.3));
}
.back-btn {
	position: absolute;
	left: 30rpx;
	top: 15rpx;
	height: 15rpx;
	width: 22rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.iconfont {
	font-family: "iconfont" !important;
	font-size: 15rpx;
	font-style: normal;
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
	color: rgba(128, 128, 128, 0.7);
}
.icon-home:before {
	content: "\e600";
}
.nav-title {
	font-size: 17rpx;
	font-weight: 600;
	color: #000000;
	text-shadow: none;
}
.nav-title .version-text {
	font-size: 9rpx;
	font-weight: normal;
	color: #000000;
}
.content {
	position: relative;
	z-index: 1;
	padding: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	background: transparent;
	width: 100%;
	margin-top: 140rpx;
	justify-content: flex-end;
	transform: translateX(-20rpx);
}
.logo {
	width: 160rpx;
	height: 160rpx;
	margin-bottom: 30rpx;
	filter: drop-shadow(0 0 10rpx rgba(76, 175, 80, 0.3));
}
.app-name {
	font-size: 20rpx;
	font-weight: 600;
	color: #E0E0E0;
	margin-bottom: 4rpx;
	text-shadow: 0 0 5rpx rgba(9, 143, 242, 0.3);
}
.version {
	font-size: 14rpx;
	color: #E0E0E0;
	margin-bottom: 15rpx;
}
.info-section {
	width: calc(100% - 100rpx);
	margin: 0 50rpx 10rpx 50rpx;
	background: rgba(255, 255, 255, 0.05);
	padding: 12rpx;
	border-radius: 10rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.2);
}
.section-title {
	font-size: 26rpx;
	color: rgba(0,0,0,0.15);
	text-shadow: 0 1px 0 rgba(255,255,255,0.5),
				 0 -1px 0 rgba(0,0,0,0.3);
	font-weight: 600;
	letter-spacing: 3rpx;
	text-align: center;
	margin-bottom: 20rpx;
	background: none;
	-webkit-text-fill-color: initial;
	position: relative;
	padding: 2rpx 0;
}
.section-title::before {
	content: "链接生涯教育科技有限公司伯乐学院 出品";
	position: absolute;
	left: 0;
	top: 1px;
	right: 0;
	color: rgba(0,0,0,0.3);
	z-index: -1;
}
.description {
	font-size: 14rpx;
	color: #E0E0E0;
	line-height: 1.6;
	display: block;
}
.contact-item {
	font-size: 14rpx;
	color: #000000 !important;
	line-height: 1.8;
	text-align: center;
}
.copyright-text {
	margin-top: 15px;
	margin-bottom: 20rpx;
	margin-left: 70px;
	text-align: left;
	width: 100%;
}
.copyright-text text {
	font-size: 12rpx;
	color: rgba(117, 117, 117, 0.5);
	display: block;
	line-height: 1.6;
	text-align: left;
}
.info-section.no-border {
	background: none;
	border: none;
	text-align: center;
}
.info-section.no-border .section-title,
.info-section.no-border .description {
	text-align: center;
	width: 100%;
}
.nav-content {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 1250rpx;
	transform: translateX(-20rpx);
}
.nav-title {
	font-size: 17rpx;
	font-weight: 600;
	color: #000000;
	text-shadow: 0 0 5rpx rgba(9, 143, 242, 0.3);
}
.nav-title .version-text {
	font-size: 9rpx;
	font-weight: normal;
}
.contact-row {
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 50rpx;
	width: 100%;
	flex-wrap: nowrap;
}
.contact-item {
	font-size: 14rpx;
	color: #000000 !important;
	line-height: 1.8;
	text-align: center;
	white-space: nowrap;
	flex: 0 0 auto;
}
.training-img {
	width: 250rpx;
	height: 150rpx;
	margin: 30rpx 0;
	margin-top: -10rpx;
}
