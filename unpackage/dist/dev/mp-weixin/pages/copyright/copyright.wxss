
@font-face {
	font-family: "iconfont";
	src: url('data:font/woff2;charset=utf-8;base64,') format('woff2');
}
.container {
	min-height: 100vh;
	background-color: #000000;
}
.header {
	background: #000000;
}
.nav-bar {
	height: 88rpx;
	display: flex;
	align-items: center;
	position: relative;
}
.back-btn {
	position: absolute;
	left: 0;
	height: 88rpx;
	width: 88rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.back-icon {
	font-size: 38rpx;
	color: #4CAF50;
	font-weight: normal;
	transform: scale(1.3, 1);
}
.title {
	width: 100%;
	text-align: center;
	font-size: 36rpx;
	font-weight: 600;
	color: #ffffff;
	background: linear-gradient(45deg, #4CAF50, #2196F3);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
}
.content {
	padding: 60rpx 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	background: #000000;
}
.logo {
	width: 160rpx;
	height: 160rpx;
	margin-bottom: 30rpx;
	filter: drop-shadow(0 0 10rpx rgba(76, 175, 80, 0.3));
}
.app-name {
	font-size: 40rpx;
	font-weight: 600;
	color: #E0E0E0;
	margin-bottom: 16rpx;
	text-shadow: 0 0 10rpx rgba(9, 143, 242, 0.3);
}
.version {
	font-size: 28rpx;
	color: #E0E0E0;
	margin-bottom: 60rpx;
}
.info-section {
	width: 100%;
	margin-bottom: 40rpx;
	background: rgba(255, 255, 255, 0.05);
	padding: 30rpx;
	border-radius: 20rpx;
	border: 1px solid rgba(76, 175, 80, 0.2);
}
.section-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #E0E0E0;
	margin-bottom: 20rpx;
	display: block;
}
.description {
	font-size: 28rpx;
	color: #E0E0E0;
	line-height: 1.6;
	display: block;
}
.contact-item {
	font-size: 28rpx;
	color: #E0E0E0;
	line-height: 1.8;
	display: block;
}
.copyright-text {
	margin-top: 80rpx;
	text-align: center;
}
.copyright-text text {
	font-size: 24rpx;
	color: #757575;
	display: block;
	line-height: 1.6;
}
