
.container {
	padding: 0;
}
.nav-bar {
	position: relative;
	display: flex;
	align-items: center;
	height: 44px;
	background-color: #fff;
	padding: 0 10px;
	border-bottom: 1px solid #eee;
}
.back-btn {
	position: absolute;
	left: 10px;
	padding: 5px 10px;
}
.back-icon {
	font-family: "iconfont";
	font-size: 20px;
	color: #333;
}
.nav-title {
	width: 100%;
	text-align: center;
	font-size: 18px;
	font-weight: 500;
}
.content {
	background-color: #fff;
	padding: 15px;
}
.title {
	font-size: 20px;
	font-weight: bold;
	text-align: center;
	margin-bottom: 20px;
}
.section {
	margin-bottom: 20px;
}
.section-title {
	font-size: 16px;
	font-weight: bold;
	margin-bottom: 10px;
}
.text {
	font-size: 14px;
	line-height: 1.6;
	color: #333;
}
.dates {
	text-align: right;
	margin-top: 40rpx;
}
