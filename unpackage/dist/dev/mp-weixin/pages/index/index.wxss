
page {
		background: #000000;
		height: 100%;
		width: 100%;
		overflow: hidden;
		position: fixed;
}
.container {
		position: fixed;
		width: 100%;
		height: 100vh;
		display: flex;
		flex-direction: column;
		background: #000000;
		overflow: hidden;
		touch-action: none;
}
.background-image {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: 1;
}
.header {
		width: 100%;
		height: 66rpx;
		display: flex;
		align-items: center;
		padding: 0 20rpx;
		background: transparent;
		position: relative;
		z-index: 101;
}
.title-container {
		display: flex;
		align-items: center;
		padding: 8rpx 34rpx 8rpx 24rpx;
		border-radius: 50rpx;
		max-width: -webkit-fit-content;
		max-width: fit-content;
		cursor: pointer;
}
.logo {
		height: 80rpx;
		width: 80rpx;
		margin-right: 10rpx;
}
.title {
		font-size: 32rpx;
		color: #ffffff;
}
.swiper-container {
		flex: 1;
		width: 100%;
		height: 100%;
		position: relative;
		z-index: 2;
}
.swiper-item {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100%;
}
.swiper-content {
		width: 90%;
		height: 90%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background: transparent;
		border-radius: 20rpx;
		padding: 20rpx;
		position: relative;
}
.swiper-image {
		width: 100%;
		height: 70%;
		border-radius: 12rpx;
}
.swiper-title {
		color: #ffffff;
		font-size: 18rpx;
		margin-top: 20rpx;
		text-align: center;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}
.item-actions {
		position: absolute;
		bottom: 20rpx;
		right: 20rpx;
		display: flex;
		gap: 20rpx;
}
.heart-icon, .info-icon {
		color: #ffffff;
		font-size: 20rpx;
		padding: 10rpx;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
}
.info-tooltip {
		position: absolute;
		right: 20rpx;
		top: 100%;
		background: rgba(0, 0, 0, 0.7);
		color: white;
		padding: 10rpx 20rpx;
		border-radius: 8rpx;
		font-size: 24rpx;
		margin-top: 10rpx;
		z-index: 100;
		max-width: 400rpx;
}
