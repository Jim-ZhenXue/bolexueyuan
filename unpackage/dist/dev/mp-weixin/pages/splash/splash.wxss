
@keyframes fadeInOut {
0%, 30%, 100% { opacity: 0;
}
40%, 90% { opacity: 1;
}
}
.splash-container {
	position: relative;
	width: 100%;
	height: 100vh;
}
.splash-image {
	width: 100%;
	height: 100%;
}
.top-left-text {
	position: fixed;
	top: 10px;
	left: 10px;
	display: flex;
	gap: 5px;
	animation: fadeInOut 9s ease-in-out infinite;
}
.char {
	font-size: 50px;
	font-weight: bold;
	text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.8), 4px 4px 0 rgba(0, 0, 0, 0.6), 6px 6px 0 rgba(0, 0, 0, 0.4);
	margin: 0 2px;
}
.enter-message {
	position: absolute;
	bottom: 20%;
	width: 100%;
	text-align: center;
	color: white;
	font-size: 24px;
	background: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0));
	padding: 10px 0;
	animation: fadeInOut 9s ease-in-out infinite;
}
