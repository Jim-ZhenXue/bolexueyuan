
.splash-container {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100vh;
}
.splash-image {
	width: 100%;
	height: 100%;
}
.top-left-text {
	position: absolute;
	top: 10px;
	left: 10px;
	color: white;
	font-size: 50px;
	font-weight: bold;
	text-shadow: 2px 2px 0 rgba(0, 0, 0, 0.8), 4px 4px 0 rgba(0, 0, 0, 0.6), 6px 6px 0 rgba(0, 0, 0, 0.4);
	display: flex;
}
.char {
	margin: 0 2px;
}
.enter-message {
	position: absolute;
	bottom: 20%;
	width: 100%;
	text-align: center;
	color: white;
	font-size: 24px;
	background: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0));
	padding: 10px 0;
}
