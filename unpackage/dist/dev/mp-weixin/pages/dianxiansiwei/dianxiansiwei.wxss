
.game-instructions.data-v-5309ab5e {
    width: 100%;
    min-height: 100vh;
    background: #000000;
    position: relative;
    overflow-y: auto;
    padding: 0 1rem;
}
.top-space.data-v-5309ab5e {
    height: 60px;
    min-height: auto;
}
.content-container.data-v-5309ab5e {
    padding: 20px;
    max-width: 100%;
    margin: 0 auto;
    padding-bottom: 2rem;
}
.title.data-v-5309ab5e {
    text-align: center;
    font-size: 2rem;
    color: #ffffff;
    margin-bottom: 2rem;
    font-weight: bold;
}
.instruction-cards.data-v-5309ab5e {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 2rem;
}
.card.data-v-5309ab5e {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
}
.card.data-v-5309ab5e:hover {
    transform: translateY(-5px);
}
.card-icon.data-v-5309ab5e {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
}
.card h3.data-v-5309ab5e {
    color: #1a1a1a;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
}
.card p.data-v-5309ab5e {
    color: #1f2937;
    margin-bottom: 1rem;
}
.card ul.data-v-5309ab5e {
    list-style-type: none;
    padding-left: 0;
}
.card ul li.data-v-5309ab5e {
    color: #1f2937;
    margin-bottom: 0.5rem;
    padding-left: 20px;
    position: relative;
}
.card ul li.data-v-5309ab5e::before {
    content: "•";
    color: #3498db;
    position: absolute;
    left: 0;
}
.progression-section.data-v-5309ab5e {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 15px;
    padding: 20px;
    margin-top: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}
.progression-section h2.data-v-5309ab5e {
    color: #1a1a1a;
    text-align: center;
    margin-bottom: 1.5rem;
}
.progression-steps.data-v-5309ab5e {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}
.step.data-v-5309ab5e {
    display: flex;
    align-items: center;
    gap: 1rem;
}
.step-number.data-v-5309ab5e {
    background: #3498db;
    color: white;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}
.step p.data-v-5309ab5e {
    color: #1f2937;
}

/* 移动端适配 */
@media (max-width: 768px) {
.content-container.data-v-5309ab5e {
        padding: 15px;
}
.title.data-v-5309ab5e {
        font-size: 1.5rem;
}
.card.data-v-5309ab5e {
        padding: 15px;
}
.card h3.data-v-5309ab5e {
        font-size: 1.2rem;
}
}
.back-button.data-v-5309ab5e {
    position: fixed;
    top: 44px;
    left: 15px;
    z-index: 999;
    padding: 8px 15px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20px;
}
.back-text.data-v-5309ab5e {
    color: #ffffff;
    font-size: 16px;
}

/* 横屏适配 */
@media screen and (orientation: landscape) {
.game-instructions.data-v-5309ab5e {
        height: 100vh;
        padding: 0;
}
.content-container.data-v-5309ab5e {
        padding: 1rem 2rem;
}
.title.data-v-5309ab5e {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
}
.instruction-cards.data-v-5309ab5e {
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
}
.card.data-v-5309ab5e {
        padding: 15px;
}
.card h3.data-v-5309ab5e {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
}
.card-icon.data-v-5309ab5e {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
}
.progression-section.data-v-5309ab5e {
        margin-top: 1.5rem;
        padding: 15px;
}
.progression-steps.data-v-5309ab5e {
        flex-direction: row;
        justify-content: space-around;
}
.back-button.data-v-5309ab5e {
        top: 20px;
}
}

/* 较小屏幕的横屏适配 */
@media screen and (orientation: landscape) and (max-height: 600px) {
.instruction-cards.data-v-5309ab5e {
        grid-template-columns: repeat(2, 1fr);
}
.title.data-v-5309ab5e {
        font-size: 1.5rem;
        margin-bottom: 1rem;
}
.card.data-v-5309ab5e {
        padding: 10px;
}
.card h3.data-v-5309ab5e {
        font-size: 1.1rem;
}
.card-icon.data-v-5309ab5e {
        font-size: 1.3rem;
}
.progression-steps.data-v-5309ab5e {
        flex-direction: column;
        gap: 0.5rem;
}
}
