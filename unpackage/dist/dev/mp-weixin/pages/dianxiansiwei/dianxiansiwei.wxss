
.game-instructions.data-v-5309ab5e {
    width: 100%;
    min-height: 100vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}
.top-space.data-v-5309ab5e {
    height: calc(100vh / 7);
}
.content-container.data-v-5309ab5e {
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
}
.title.data-v-5309ab5e {
    text-align: center;
    font-size: 2rem;
    color: #2c3e50;
    margin-bottom: 2rem;
    font-weight: bold;
}
.instruction-cards.data-v-5309ab5e {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 2rem;
}
.card.data-v-5309ab5e {
    background: white;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
}
.card.data-v-5309ab5e:hover {
    transform: translateY(-5px);
}
.card-icon.data-v-5309ab5e {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
}
.card h3.data-v-5309ab5e {
    color: #2c3e50;
    font-size: 1.5rem;
    margin-bottom: 1rem;
    text-align: center;
}
.card p.data-v-5309ab5e {
    color: #34495e;
    margin-bottom: 1rem;
}
.card ul.data-v-5309ab5e {
    list-style-type: none;
    padding-left: 0;
}
.card ul li.data-v-5309ab5e {
    color: #7f8c8d;
    margin-bottom: 0.5rem;
    padding-left: 20px;
    position: relative;
}
.card ul li.data-v-5309ab5e::before {
    content: "•";
    color: #3498db;
    position: absolute;
    left: 0;
}
.progression-section.data-v-5309ab5e {
    background: white;
    border-radius: 15px;
    padding: 20px;
    margin-top: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}
.progression-section h2.data-v-5309ab5e {
    color: #2c3e50;
    text-align: center;
    margin-bottom: 1.5rem;
}
.progression-steps.data-v-5309ab5e {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}
.step.data-v-5309ab5e {
    display: flex;
    align-items: center;
    gap: 1rem;
}
.step-number.data-v-5309ab5e {
    background: #3498db;
    color: white;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
}
  
  /* 移动端适配 */
@media (max-width: 768px) {
.content-container.data-v-5309ab5e {
      padding: 15px;
}
.title.data-v-5309ab5e {
      font-size: 1.5rem;
}
.card.data-v-5309ab5e {
      padding: 15px;
}
.card h3.data-v-5309ab5e {
      font-size: 1.2rem;
}
}
  